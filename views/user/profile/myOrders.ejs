<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.body.addEventListener('click', async (event) => {
            if (event.target && event.target.classList.contains('cancelButton')) {
                const id = event.target.getAttribute('data-orderId');

                try {
                    Swal.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, cancel it!"
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            const response = await fetch(`/user/cancelAll/${id}`, { method: "PATCH" });
                            if (response.ok) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Order Cancelled',
                                    text: 'Your order has been cancelled successfully.',
                                    confirmButtonText: 'OK'
                                }).then(() => window.location.reload());
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Cancellation Failed',
                                    text: `Failed to cancel order ${id}. Please try again.`,
                                    confirmButtonText: 'OK'
                                });
                            }
                        }
                    });
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred. Please try again later.',
                        confirmButtonText: 'OK'
                    });
                }
            }
        });

        document.querySelectorAll('#retryPayment').forEach(button => {
            button.addEventListener('click', async () => {
                const id = button.getAttribute('data-orderId');
                const razorpayAmount = button.getAttribute('data-amount');
                try {
                    const options = {
                        key: "RAZORPAY_KEY_ID",
                        amount: razorpayAmount * 100,
                        currency: "INR",
                        name: "Styleova",
                        description: "Purchased from Styleova",
                        image: "/assets/img/icon.jpg",
                        handler: async function () {
                            try {
                                const response = await axios.get(`/user/retryPayment/${id}`)
                                if (response.data.mission == "successfull") {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Payment Successful',
                                        text: 'Continue browsing your orders.',
                                        confirmButtonText: 'OK'
                                    }).then(() => window.location.reload())
                                }
                            } catch (error) {
                                console.log(error);
                            }
                        },
                        theme: {
                            color: "#3399cc"
                        }
                    };

                    const rzp = new Razorpay(options);
                    rzp.open();

                } catch (e) {
                    console.log(e);
                    res.status(500).send(e);
                }
            });
        });
    });
</script>

